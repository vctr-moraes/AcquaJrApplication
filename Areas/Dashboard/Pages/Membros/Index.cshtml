@page
@model AcquaJrApplication.Areas.Dashboard.Pages.Membros.IndexModel

@{
    ViewData["Title"] = "Membros";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_DashboardNavPartialView" />

<h3>@ViewData["Title"]</h3>

<p>
    <a asp-page="Create" type="button" class="btn btn-light btn-outline-success">
        <i class="material-icons">add</i>
        Novo membro
    </a>
</p>

@if (Model.Membros.Count == 0)
{
    <div class="vertical-center justify-content-center">
        <h4 class="text-muted" align="center">Não há membros ativos cadastrados no sistema</h4>
    </div>
}
else
{
    <table class="table table-bordered table-condensed">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Membros[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Membros[0].Cargo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Membros[0].DataEntrada)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Membros)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataEntrada)
                    </td>
                    <td class="text-right">
                        <a asp-page="./Details" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-primary" title="Detalhes">
                            <i class="material-icons">search</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
