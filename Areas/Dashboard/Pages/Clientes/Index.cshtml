@page
@model AcquaJrApplication.Areas.Dashboard.Pages.Clientes.IndexModel

<style>
    .id-cliente {
        cursor: pointer;
    }
</style>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_DashboardNavPartialView" />

<h3>@ViewData["Title"]</h3>

<p>
    <a asp-page="Create" type="button" class="btn btn-success">
        <i class="material-icons">add</i>
        Novo cliente
    </a>
</p>

@if (Model.Clientes.Count == 0)
{
    <div class="vertical-center justify-content-center">
        <h4 class="text-muted" align="center">Não há clientes cadastrados no sistema</h4>
    </div>
}
else
{
    <table class="table border table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Clientes[0].NomeFantasia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clientes[0].Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clientes[0].Telefone1)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clientes)
            {
                <tr class="id-cliente" data-cliente="@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeFantasia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone1)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    $(".id-cliente").click(function () {
        const id_cliente = $(this).data('cliente');
        window.location.href = "/Dashboard/Clientes/Details?id=" + id_cliente
    });
</script>
