@page
@model AcquaJrApplication.Areas.Dashboard.Pages.Eventos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].PontoReferencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].OutrasInformacoes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Evento) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PontoReferencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutrasInformacoes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
