        <table class="table table-bordered table-condensed">
            <thead class="thead-light">
                <tr>
                    <th>Membro</th>
                    <th>Cargo</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MembrosProjetos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Membro.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Membro.Cargo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Membro.Email)
                        </td>
