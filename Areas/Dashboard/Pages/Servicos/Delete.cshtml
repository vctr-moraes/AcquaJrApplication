@page
@model AcquaJrApplication.Areas.Dashboard.Pages.Servicos.DeleteModel

@{
    ViewData["Title"] = "Deletar serviço";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_DashboardNavPartialView" />

<h3>@ViewData["Title"]</h3>

<h4 class="text-danger">Tem certeza que deseja deletar este serviço?</h4>

<div>
    <hr />
    <partial name="~/Pages/Components/Summary/_ValidationSummaryModelOnlyPartial.cshtml" />

    @{ await Html.RenderPartialAsync("_ServicoDetalhesPartial", Model.ServicoVM); }

    <form method="post">
        <input type="hidden" asp-for="ServicoVM.Id" />
        <a class="btn btn-dark" asp-page="./Index">
            <i class="material-icons">arrow_back</i>
            Voltar
        </a>
        <button type="submit" value="Deletar" class="btn btn-danger">
            <i class="material-icons">delete_forever</i>
            Deletar
        </button>
    </form>
</div>
