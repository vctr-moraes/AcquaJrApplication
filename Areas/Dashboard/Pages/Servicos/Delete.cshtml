@page
@model AcquaJrApplication.Areas.Dashboard.Pages.Servicos.DeleteModel

@{
    ViewData["Title"] = "Deletar serviço";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_DashboardNavPartialView" />

<h3>@ViewData["Title"]</h3>

<h4 class="text-danger">Tem certeza que deseja deletar este serviço?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servico.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servico.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servico.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servico.Descricao)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Servico.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar</a>
    </form>
</div>
